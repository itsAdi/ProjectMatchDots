.window {
    background-color: rgb(253, 225, 35);
    width: 800px;
    border-top-left-radius: 15px;
    border-top-right-radius: 15px;
    border-bottom-right-radius: 15px;
    border-bottom-left-radius: 15px;
    flex-direction: column;
    padding-top: 15px;
    padding-right: 15px;
    padding-bottom: 15px;
    padding-left: 15px;
}

.score {
    flex-direction: row;
    height: 250px;
}

#home {
    height: 100px;
    overflow: hidden;
    align-items: center;
}

.scoreDetailContainer {
    width: 100%;
}

#home > Button {
    width: 90%;
}

.gameResultUI {
    height: 100%;
    justify-content: center;
    align-items: center;
    background-color: rgb(173, 98, 0);
    opacity: 0;
}

.showGameResultUI {
    opacity: 1;
    transition-property: opacity;
    transition-duration: 0.3s;
    transition-timing-function: linear;
}

.gameResultWindow {
    translate: 0 150px;
    opacity: 0;
}

.showGameResultWindow {
    translate: 0;
    opacity: 1;
    transition-property: translate, opacity;
    transition-duration: 0.3s, 0.3s;
    transition-timing-function: ease, ease;
    transition-delay: 0s, 0s;
}
