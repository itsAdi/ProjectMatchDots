.playerDetailsContainer {
    width: 100%;
    flex-direction: row;
    align-self: flex-start;
    justify-content: space-between;
    padding-top: 10px;
    padding-right: 10px;
    padding-bottom: 0;
    padding-left: 10px;
}

.playerData_leftToRight {
    flex-direction: row;
}

.playerDetails_left {
    flex-grow: 1;
    justify-content: space-around;
}

.playerData_rightToLeft {
    flex-direction: row-reverse;
}

.playerDetails_right {
    flex-grow: 1;
    justify-content: space-around;
    align-items: flex-end;
}

.turnIndicator {
    flex-grow: 1;
    background-color: rgba(255, 255, 255, 0.14);
    border-left-color: rgb(255, 255, 255);
    border-right-color: rgb(255, 255, 255);
    border-top-color: rgb(255, 255, 255);
    border-bottom-color: rgb(255, 255, 255);
    border-top-width: 7px;
    border-right-width: 7px;
    border-bottom-width: 7px;
    border-left-width: 7px;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
    border-bottom-right-radius: 10px;
    border-bottom-left-radius: 10px;
    opacity: 0;
    transition-property: opacity;
    transition-timing-function: ease-out;
    transition-duration: 0.3s;
}

.playerAvatar {
    width: 200px;
    height: 200px;
    background-image: url("project://database/Assets/Sprites/Pic1.jpg?fileID=21300000&guid=db4054a3edfa5d34fa5c551920da2fe7&type=3#Pic1");
}

.turnIndicatorShow {
    flex-grow: 1;
    background-color: rgba(255, 255, 255, 0.14);
    border-left-color: rgb(255, 255, 255);
    border-right-color: rgb(255, 255, 255);
    border-top-color: rgb(255, 255, 255);
    border-bottom-color: rgb(255, 255, 255);
    border-top-width: 7px;
    border-right-width: 7px;
    border-bottom-width: 7px;
    border-left-width: 7px;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
    border-bottom-right-radius: 10px;
    border-bottom-left-radius: 10px;
    opacity: 1;
    transition-property: opacity;
    transition-duration: 0.3s;
    transition-timing-function: ease-out;
}

.turnTimerBar .unity-progress-bar__container {
    max-width: none;
    max-height: none;
    min-width: auto;
    min-height: auto;
    flex-grow: 1;
}

.turnTimerBar .unity-progress-bar__progress {
    margin-top: 0;
    margin-right: 0;
    margin-bottom: 0;
    margin-left: 0;
    background-color: rgb(164, 56, 0);
}

.turnTimerBar .unity-progress-bar__background {
    border-top-width: 0;
    border-right-width: 0;
    border-bottom-width: 0;
    border-left-width: 0;
    background-color: rgb(255, 128, 80);
}

.turnTimerBar {
    height: 10px;
    margin-top: 0;
    margin-right: 0;
    margin-bottom: 0;
    margin-left: 0;
    padding-top: 0;
    padding-right: 0;
    padding-bottom: 0;
    padding-left: 0;
}
